<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activity.LoginActivity">

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="415dp"
        android:layout_height="206dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/loginbgtop" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="86dp"
        android:layout_height="69dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/imageView6"
        app:layout_constraintTop_toTopOf="@+id/imageView6"
        app:srcCompat="@drawable/handbagicon" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="MyHands"
        android:textColor="#000000"
        app:fontFamily="@font/open_sans"
        app:layout_constraintEnd_toEndOf="@+id/imageView7"
        app:layout_constraintStart_toStartOf="@+id/imageView7"
        app:layout_constraintTop_toBottomOf="@+id/imageView7" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="411dp"
        android:layout_height="523dp"
        android:layout_marginBottom="2dp"
        android:background="@drawable/viebg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7"
        app:layout_constraintVertical_bias="0.226">

        <EditText
            android:id="@+id/editUsernameSignIn2"
            android:layout_width="258dp"
            android:layout_height="55dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/edittextbg"
            android:ems="10"
            android:fontFamily="@font/open_sans"
            android:gravity="center"
            android:hint="@string/username"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="@+id/editEmailSignup2"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="@+id/editEmailSignup2"
            app:layout_constraintTop_toBottomOf="@+id/editEmailSignup2" />

        <EditText
            android:id="@+id/editPass2"
            android:layout_width="258dp"
            android:layout_height="55dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/edittextbg"
            android:ems="10"
            android:gravity="center"
            android:hint="@string/password"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="@+id/editUsernameSignIn2"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/editUsernameSignIn2"
            app:layout_constraintTop_toBottomOf="@+id/editUsernameSignIn2" />

        <Button
            android:id="@+id/btnSignIn2"
            android:layout_width="180dp"
            android:layout_height="52dp"
            android:layout_marginTop="64dp"
            android:background="@drawable/addtocartbg"
            android:text="Đăng ký"
            android:textColor="#FFFFFF"
            app:layout_constraintEnd_toEndOf="@+id/editConfirmPass2"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="@+id/editConfirmPass2"
            app:layout_constraintTop_toBottomOf="@+id/editConfirmPass2" />

        <EditText
            android:id="@+id/editEmailSignup2"
            android:layout_width="258dp"
            android:layout_height="55dp"
            android:layout_marginTop="64dp"
            android:background="@drawable/edittextbg"
            android:ems="10"
            android:fontFamily="@font/open_sans"
            android:gravity="center"
            android:hint="Email"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/editConfirmPass2"
            android:layout_width="258dp"
            android:layout_height="55dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/edittextbg"
            android:ems="10"
            android:fontFamily="@font/open_sans"
            android:gravity="center"
            android:hint="Nhập lại mật khẩu"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="@+id/editPass2"
            app:layout_constraintStart_toStartOf="@+id/editPass2"
            app:layout_constraintTop_toBottomOf="@+id/editPass2" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>