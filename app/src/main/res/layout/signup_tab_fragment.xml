<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/editUsernameSignup"
        android:layout_width="258dp"
        android:layout_height="55dp"
        android:layout_marginTop="200dp"
        android:background="@drawable/edittextbg"
        android:ems="10"
        android:gravity="center"
        android:hint="Tên đăng nhập"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/editEmailSignUp"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnSignup"
        android:layout_width="180dp"
        android:layout_height="52dp"
        android:layout_marginTop="64dp"
        android:background="@drawable/addtocartbg"
        android:text="Đăng ký"
        android:textColor="@color/cardview_light_background"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editConfirmPassSignup" />

    <EditText
        android:id="@+id/editEmailSignUp"
        android:layout_width="258dp"
        android:layout_height="55dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/edittextbg"
        android:ems="10"
        android:gravity="center"
        android:hint="Email"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/editUsernameSignup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/editPassSignup"
        android:layout_width="258dp"
        android:layout_height="55dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/edittextbg"
        android:ems="10"
        android:gravity="center"
        android:hint="Mật khẩu"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="@+id/editUsernameSignup"
        app:layout_constraintStart_toStartOf="@+id/editUsernameSignup"
        app:layout_constraintTop_toBottomOf="@+id/editUsernameSignup" />

    <EditText
        android:id="@+id/editConfirmPassSignup"
        android:layout_width="258dp"
        android:layout_height="55dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/edittextbg"
        android:ems="10"
        android:gravity="center"
        android:hint="Nhập lại mật khẩu"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="@+id/editPassSignup"
        app:layout_constraintStart_toStartOf="@+id/editPassSignup"
        app:layout_constraintTop_toBottomOf="@+id/editPassSignup" />

</androidx.constraintlayout.widget.ConstraintLayout>